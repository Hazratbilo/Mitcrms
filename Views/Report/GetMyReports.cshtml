@model MITCRMS.Models.DTOs.Report.ReportDto

@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
    ViewData["Title"] = "View Report";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-text me-2"></i>Report Details
                    </h4>
                </div>

                <div class="card-body p-4">
                    @if (Model == null)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>Report not found.
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Report Title</label>
                            <p class="form-control-plaintext border-bottom pb-2">@Model.Tittle</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Content</label>
                            <div class="form-control-plaintext border rounded p-3 bg-light" style="min-height: 120px; white-space: pre-wrap;">@Model.Content</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold text-muted">Department</label>
                                <p class="form-control-plaintext border-bottom pb-2">@Model.DepartmentName</p>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold text-muted">Report Date</label>
                                <p class="form-control-plaintext border-bottom pb-2">@Model.ReportDate?.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>

                        @* @if (!string.IsNullOrEmpty(Model.CreatedBy)) *@
                        {
                            <div class="row">
                                @* <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold text-muted">Created By</label>
                                    <p class="form-control-plaintext border-bottom pb-2">@Model.CreatedBy</p>
                                </div> *@

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold text-muted">Created On</label>
                                    <p class="form-control-plaintext border-bottom pb-2">@Model.ReportDate?.ToString("MMMM dd, yyyy hh:mm tt")</p>
                                </div>
                            </div>
                        }

                        <div class="d-flex gap-2 justify-content-end border-top pt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to List
                            </a>
                            <a asp-action="EditReport" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash me-1"></i>Delete
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this report?</p>
                <p class="text-muted mb-0"><strong>Title:</strong> @Model?.Tittle</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteReport" asp-route-id="@Model?.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete Report
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add confirmation on delete
            $('form[asp-action="DeleteReport"]').on('submit', function(e) {
                var $btn = $(this).find('button[type="submit"]');
                $btn.prop('disabled', true);
                $btn.html('<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>Deleting...');
            });
        });
    </script>
}