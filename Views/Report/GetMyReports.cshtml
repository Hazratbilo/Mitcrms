@using MITCRMS.Models.DTOs;
@model List<MITCRMS.Models.DTOs.Report.ReportDto>

@{
        Layout = "~/Views/Shared/_StaffLayout.cshtml";
    ViewBag.Title = "Staff Dashboard";
   ViewData["Title"] = "My Reports";
    var userRole = ViewBag.UserRole as string;
    var userName = ViewBag.UserName as string;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-clipboard-list me-2"></i>My Reports
                    </h4>
                    <a asp-action="CreateReport" class="btn btn-light btn-sm">
                        <i class="fas fa-plus me-1"></i>New Report
                    </a>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col" style="width: 5%">#</th>
                                        <th scope="col" style="width: 25%">
                                            <i class="fas fa-heading me-1"></i>Title
                                        </th>
                                        <th scope="col" style="width: 40%">
                                            <i class="fas fa-file-alt me-1"></i>Content
                                        </th>
                                        <th scope="col" style="width: 15%">
                                            <i class="far fa-calendar-alt me-1"></i>Date Created
                                        </th>
                                        <th scope="col" style="width: 15%" class="text-center">
                                            <i class="fas fa-cog me-1"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int count = 1; }
                                    @foreach (var report in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">@count</td>
                                            <td>
                                                <strong class="text-primary">@report.Tittle</strong>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 400px;" title="@report.Content">
                                                    @report.Content
                                                </div>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="far fa-calendar-alt me-1"></i>
                                                    @report.DateCreated.ToString("MMM dd, yyyy")
                                                    <br />
                                                    <i class="far fa-clock me-1"></i>
                                                    @report.DateCreated.ToString("hh:mm tt")
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="ViewReport" asp-route-id="@report.Id" 
                                                       class="btn btn-outline-info" 
                                                       title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="EditReport" asp-route-id="@report.Id" 
                                                       class="btn btn-outline-warning" 
                                                       title="Edit Report">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-outline-danger" 
                                                            title="Delete Report"
                                                            onclick="confirmDelete(@report.Id, '@report.Tittle')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3 d-flex justify-content-between align-items-center">
                            <p class="text-muted mb-0">
                                <i class="fas fa-info-circle me-1"></i>
                                Total Reports: <strong class="text-primary">@Model.Count()</strong>
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">No Reports Found</h5>
                            <p class="text-muted">You haven't created any reports yet.</p>
                            <a asp-action="CreateReport" class="btn btn-primary mt-3">
                                <i class="fas fa-plus me-2"></i>Create Your First Report
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this report?</p>
                <p class="fw-bold text-danger" id="reportTitle"></p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete Report
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);

        // Delete confirmation
        function confirmDelete(reportId, reportTitle) {
            document.getElementById('reportTitle').textContent = reportTitle;
            document.getElementById('deleteForm').action = '@Url.Action("DeleteReport")/' + reportId;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        // Tooltip initialization (if needed)
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}
