@model MITCRMS.Models.DTOs.Report.CreateReportRequestModel


@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
    ViewData["Title"] = "Create Report";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateReport">
    <div class="form-group">
        <label asp-for="Tittle" class="control-label"></label>
        <input asp-for="Tittle" class="form-control" />
        <span asp-validation-for="Tittle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="CreateReport" class="btn btn-secondary">Back</a>
</form>

