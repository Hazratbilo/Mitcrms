            </div>
        </div> *@
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // DOM Elements
        const departmentInput = document.getElementById('departmentNameInput');
        const charCount = document.getElementById('charCount');
        const previewName = document.getElementById('previewName');
        const previewDate = document.getElementById('previewDate');
        const form = document.getElementById('departmentForm');
        const submitBtn = document.getElementById('submitBtn');
        const resetBtn = document.getElementById('resetBtn');
        const customValidation = document.getElementById('customValidation');
        const exampleButtons = document.querySelectorAll('.example-btn');

        // Character Counter
        departmentInput.addEventListener('input', function() {
            const length = this.value.length;
            charCount.textContent = length;

            // Update preview
            if (this.value.trim()) {
                previewName.textContent = this.value;
            } else {
                previewName.textContent = 'Department Name Preview';
            }

            // Validate
            validateInput();
        });

        // Custom Validation
        function validateInput() {
            const value = departmentInput.value.trim();
            customValidation.textContent = '';
            departmentInput.classList.remove('is-invalid');

            if (value === '') {
                departmentInput.classList.add('is-invalid');
                customValidation.textContent = 'Department name cannot be empty';
                return false;
            }

            if (value.length < 2) {
                departmentInput.classList.add('is-invalid');
                customValidation.textContent = 'Department name must be at least 2 characters';
                return false;
            }

            if (value.length > 100) {
                departmentInput.classList.add('is-invalid');
                customValidation.textContent = 'Department name cannot exceed 100 characters';
                return false;
            }

            // Check for special characters (allow only letters, numbers, spaces, hyphens, and ampersands)
            const validPattern = /^[a-zA-Z0-9\s\-&]+$/;
            if (!validPattern.test(value)) {
                departmentInput.classList.add('is-invalid');
                customValidation.textContent = 'Department name can only contain letters, numbers, spaces, hyphens, and ampersands';
                return false;
            }

            departmentInput.classList.add('is-valid');
            return true;
        }

        // Form Submit
        form.addEventListener('submit', function(e) {
            if (!validateInput()) {
                e.preventDefault();
                return false;
            }

            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Adding...';
        });

        // Reset Button
        resetBtn.addEventListener('click', function() {
            setTimeout(function() {
                charCount.textContent = '0';
                previewName.textContent = 'Department Name Preview';
                customValidation.textContent = '';
                departmentInput.classList.remove('is-invalid', 'is-valid');
            }, 10);
        });

        // Example Buttons
        exampleButtons.forEach(button => {
            button.addEventListener('click', function() {
                const exampleName = this.getAttribute('data-name');
                departmentInput.value = exampleName;
                departmentInput.focus();

                // Trigger input event to update counter and preview
                const event = new Event('input', { bubbles: true });
                departmentInput.dispatchEvent(event);
            });
        });

        // Auto-dismiss alerts
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Focus on input when page loads
        window.addEventListener('load', function() {
            departmentInput.focus();
        });

        // Real-time preview date update
        setInterval(function() {
            const now = new Date();
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            previewDate.textContent = now.toLocaleDateString('en-US', options);
        }, 1000);
    </script>
}

