                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-building text-muted"></i>
                            </span>

                            <input asp-for="DepartmentCode"
                                   class="form-control border-start-0 ps-0"
                                   id="departmentCodeInput"
                                   placeholder="Enter department Code"
                                   required />
                        </div>
                        <span asp-validation-for="DepartmentCode" class="text-danger small"></span>
                        <div class="invalid-feedback d-block" id="customValidation"></div>



                    <!-- Preview Section -->
                    @* <div class="mb-4">
                        <label class="form-label fw-semibold">Preview</label>
                        <div class="card bg-light border">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-3">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-semibold" id="previewName">Department Name Preview</h6>
                                        <small class="text-muted">Created: <span id="previewDate">@DateTime.UtcNow.ToString("MMM dd, yyyy")</span></small>
                                    </div>
                                </div>
                            </div>
                        </div>
